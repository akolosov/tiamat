<%= simple_form_for @task do |f| %>
  <%= f.hidden_field :user_id %>
  <%= f.association :parent %>
  <%= f.association :project %>
  <%= f.association :folder, :include_blank => false %>
  <%= f.association :task_context %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :due_day %>
  <%= f.input :is_important %>
  <%= f.association :tags, :as => :check_boxes %>
  <%= f.button :submit %>
<% end %>
